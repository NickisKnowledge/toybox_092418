<h1>Here's all the Toys in our ToyBox</h1>
<h2><%= title_message(@toys) %></h2>

<% if current_user %>
  <h2>Lets add more! =D</h2>
  <h4>Add by Brand  </h4>
    <ul><% @toymakers.each do |toymaker| %>
      <li><%= link_to toymaker.brand, new_toymaker_toy_path(toymaker) %></li>
    <% end %></ul>

  <h4>or just, <%= link_to 'Add a toy', new_toy_path %></h4>
<% else %>
  <p><%= link_to 'Login', user_session_path %>  or <%= link_to 'SignUp', new_user_registration_path %> to add toys to our toybox</p>
<% end %>
<ul>
  <% @toys.each do |toy| %>
    <li>
      <b><%= link_to toy.name, toy_path(toy) %></b> make by <b><%= toy.toymaker.brand  %></b>
       <%= button_to 'Rent Me', toy_rental_new_path(toy), method: :get if user_signed_in? %>
    </li>
  <% end %>
</ul>
